{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Plotwist",
  "version": "1.0.0",
  "identifier": "com.plotwist.app",
  "build": {
    "frontendDist": "../web/.next",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd ../web && pnpm dev",
    "beforeBuildCommand": "cd ../web && pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Plotwist",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "iOS": {
      "developmentTeam": "YOUR_TEAM_ID"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Entertainment"
  }
}